<script lang="ts">
  import { partyStore, isInParty } from "../stores/party";
  import { partyClient } from "../lib/PartyClient";
  import { optionsStore } from "../stores/options";
  import ChatMessage from "./ChatMessage.svelte";
  import PeerList from "./PeerList.svelte";
  import ChatInput from "./ChatInput.svelte";

  export let toggleMinimize: () => void;

  let partyIdInput = $state("");

  async function joinParty() {
    if (partyIdInput.trim()) {
      await partyClient.connect(partyIdInput.trim(), {
        clientName: $optionsStore.clientName,
        emoji: $optionsStore.emoji
      });
    }
  }

  function leaveParty() {
    partyClient.disconnect();
  }
</script>

<div class="chat-window">
  <header>
    <div class="title">
      <span class="logo">ðŸŽ‰</span>
      <h1>Jelly Party</h1>
    </div>
    <button class="minimize" onclick={toggleMinimize}>â€”</button>
  </header>

  {#if !$isInParty}
    <div class="setup">
      <div class="welcome">
        <p>Enter a Party ID to start watching in sync!</p>
      </div>
      <div class="input-group">
        <input 
          type="text" 
          placeholder="Party ID..." 
          bind:value={partyIdInput}
          onkeydown={(e) => e.key === 'Enter' && joinParty()}
        />
        <button onclick={joinParty} disabled={!partyIdInput.trim()}>Join</button>
      </div>
    </div>
  {:else}
    <div class="active-party">
      <PeerList peers={$partyStore.peers} />
      
      <div class="messages" id="message-list">
        {#each $partyStore.messages as msg (msg.id)}
          <ChatMessage {msg} />
        {/each}
        {#if $partyStore.messages.length === 0}
          <div class="empty">No messages yet. Say hi!</div>
        {/if}
      </div>

      <ChatInput onSend={(text) => partyClient.sendChatMessage(text)} />
      
      <button class="leave-btn" onclick={leaveParty}>Leave Party</button>
    </div>
  {/if}
</div>

