{
	"name": "Jelly Party",
	"version": "2.0.0",
	"description": "Watch videos with your friends â€” in sync!",
	"manifest_version": 3,
	"permissions": ["activeTab", "storage"],
	"host_permissions": ["<all_urls>"],
	"action": {
		"default_popup": "src/popup/popup.html",
		"default_icon": {
			"16": "icons/16x16.png",
			"32": "icons/32x32.png",
			"48": "icons/48x48.png",
			"128": "icons/128x128.png"
		}
	},
	"background": {
		"service_worker": "src/background/index.ts",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": ["https://join.jelly-party.com/*"],
			"js": ["src/content/join.ts"]
		}
	],
	"icons": {
		"16": "icons/16x16.png",
		"32": "icons/32x32.png",
		"48": "icons/48x48.png",
		"128": "icons/128x128.png"
	},
	"web_accessible_resources": [
		{
			"resources": ["src/chat/chat.html"],
			"matches": ["<all_urls>"]
		}
	]
}
