{
	"name": "Jelly Party",
	"version": "2.0.0",
	"description": "Watch videos with your friends â€” in sync!",
	"manifest_version": 3,
	"permissions": ["activeTab", "storage", "scripting"],
	"optional_host_permissions": ["https://*/*", "http://*/*"],
	"action": {
		"default_icon": {
			"16": "16x16.png",
			"32": "32x32.png",
			"48": "48x48.png",
			"128": "128x128.png"
		}
	},
	"background": {
		"service_worker": "src/background/index.ts",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": ["https://join.jelly-party.com/*"],
			"js": ["src/content/join.ts"],
			"run_at": "document_start"
		}
	],
	"icons": {
		"16": "16x16.png",
		"32": "32x32.png",
		"48": "48x48.png",
		"128": "128x128.png"
	},
	"web_accessible_resources": [
		{
			"resources": ["src/chat/chat.html", "src/chat/*", "*.png"],
			"matches": ["https://*/*", "http://*/*"]
		}
	]
}
