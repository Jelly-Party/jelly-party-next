{
	"name": "jelly-party",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "node .dev/dev.js",
		"dev:all": "pnpm --filter jelly-party-lib build && mkdir -p .dev && FORCE_COLOR=1 concurrently --kill-others \"pnpm run dev:logs\" \"pnpm --filter jelly-party-server dev\" \"pnpm --filter jelly-party-join dev\" \"pnpm --filter jelly-party-extension dev\" \"pnpm --filter jelly-party-website dev\" --names \"logs,server,join,ext,web\" --prefix-colors \"yellow,blue,green,magenta,cyan\" | tee .dev/dev.log",
		"dev:logs": "node .dev/log-streamer.js",
		"dev:services": "concurrently --kill-others \"pnpm --filter jelly-party-server dev\" \"pnpm --filter jelly-party-join dev\" --names \"server,join\" --prefix-colors \"blue,green\"",
		"test:services": "concurrently --kill-others \"pnpm run dev:logs\" \"pnpm run dev:services\" --names \"logs,services\" --prefix-colors \"yellow,cyan\"",
		"dev:vite": "vite dev",
		"build": "pnpm --filter '*' build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "pnpm --filter '*' check",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"format": "biome format --write .",
		"test:unit": "vitest",
		"test": "pnpm run test:unit -- --run && pnpm run test:e2e",
		"test:e2e": "playwright test"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@playwright/test": "^1.57.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.17",
		"@types/ws": "^8.18.1",
		"@vitest/browser-playwright": "^4.0.15",
		"concurrently": "^9.2.1",
		"playwright": "^1.57.0",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3",
		"vite": "^7.2.6",
		"vitest": "^4.0.15",
		"vitest-browser-svelte": "^2.0.1",
		"ws": "^8.19.0"
	}
}
